<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter: 0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/azzeraListaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAzzeraButtonClick"
            android:text="AZZERA LISTA" />

        <Button
            android:id="@+id/destroyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDestroyButtonClick"
            android:text="DESTROY" />
    </LinearLayout>

    <EditText
        android:id="@+id/myET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="LISTA CHIAMATE" />

        <ListView
            android:id="@+id/myLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>

</LinearLayout>