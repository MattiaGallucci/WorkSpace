package poo23.bank;

public class DataSet {
	private double sum;
	private Measurable minimum;
	private Measurable maximum;
	private int count;

	public DataSet() {
		sum = 0;
		count = 0;
		minimum = null;
		maximum = null;
	}

	public double getAverage() {
		if (count == 0)
			return 0;
		else
			return sum / count;
	}

	public Measurable getMaximum() {
		return maximum;
	}
}
